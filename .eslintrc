{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "define": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
         "jsx": true
       }
    },
    "rules": {
        "indent": [
            "error", 2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-undef": 0,
        "no-useless-escape": 0
    }
}
